[push]
	default = simple
[merge]
	conflictstyle = diff3
[color]
	diff = true
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[credential]
	helper = osxkeychain
[alias]
    st = status --short --branch --untracked-files=no
    di = diff --patch-with-stat
    lo = log --graph --pretty=format:'%C(red)%h%C(reset)%C(yellow)%d %C(green)(%cr) %C(reset)%s %C(bold blue)<%an>%C(reset)'
	br = branch --verbose --verbose --all
